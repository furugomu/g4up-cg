<h1>New Entry</h1>

<%= simple_form_for @entry do |f| %>
 <%= f.input :title %>
 <%= f.input :body %>
 <%= f.input :images, as: :file do %>
  <%= f.file_field :images, multiple: true, accept: 'image/jpeg', required: '' %>
 <% end %>

 <div class="actions">
  <%= f.submit %>
 </div>
<% end %>

<%= link_to 'Back', entries_path %>
